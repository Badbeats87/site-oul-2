# Application
NODE_ENV=development
APP_NAME=Vinyl Catalog API
APP_PORT=3001
APP_HOST=localhost

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vinyl_catalog_dev
DB_USER=postgres
DB_PASSWORD=postgres

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:3000

# External APIs
DISCOGS_API_URL=https://api.discogs.com
DISCOGS_USER_AGENT=VinylCatalog/0.1
EBAY_API_URL=https://api.ebay.com
EBAY_APP_ID=your_ebay_app_id

# Feature Flags
FEATURE_PRICING_ENGINE=true
FEATURE_INVENTORY_MANAGEMENT=true
FEATURE_SELLER_SUBMISSIONS=true
